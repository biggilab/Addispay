<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/tvnkjgha"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login">
<TextView
    android:layout_width="fill_parent"
    android:layout_height="56dp"
    android:id="@+id/loginErrorMsg"
    android:textColor="#000000"
    android:layout_above="@+id/username"
    android:layout_alignParentLeft="true"/>
<EditText
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:textSize="19sp"
    android:id="@+id/username"
    android:hint="@string/Username_email"
    android:layout_centerInParent="true"
    android:singleLine="true"
    android:background="@drawable/round_corners_silver"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
 />
<EditText
    android:layout_width="300dp"
    android:textSize="19sp"
    android:layout_height="50dp"
    android:id="@+id/password_input"
    android:hint="@string/password"
    android:layout_centerInParent="true"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/username"
    android:singleLine="true"
    android:background="@drawable/round_corners_silver"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
/>
    <Button
        android:id="@+id/login"
        android:text="@string/login"
        android:textColor="#D91414"
        android:textSize="19sp"
        android:layout_below="@+id/password_input"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dip"
        android:layout_alignParentEnd="true"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/button_login"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />



</RelativeLayout>
